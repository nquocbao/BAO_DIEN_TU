<div class="container">
	<div class="row justify-content-center" style="margin-top:50px;">
		<div class="col-12 col-md-8 col-lg-6 pb-5">
    <!--Form with header-->
     <form action="" method="POST">
        <div class="card border-primary rounded-0">
            <div class="card-header p-0">
              <div class="bg-info text-white text-center py-2">
                  <h3><i class="fas fa fa-plus-square"></i>  Sửa Phân Hệ Tài Khoản </h3>
              </div>
            </div>
        <div class="card-body p-3">

      <!--Body-->
      {{#if this.editpermission}}
    <div class="form-group">
        <label for="txtID">User ID</label>
       <div class="input-group mb-2">
          <input  type="text" class="form-control" id="txtID" name="f_ID" value="{{editpermission.f_ID}}" disabled>
      </div>  
       <label for="txtUsername">User Name</label>
      <div class="input-group mb-2">
          <input  type="text" class="form-control" id="txtUsername" name="f_Userame" 
          value="{{editpermission.f_Username}}" disabled>
      </div>
    </div>
    <div class="form-group">
    <script>
        if({{editpermission.f_Permission}} == 0)
            document.write('<label for="">Phân Hệ: <span style="color: red;  font-weight: bold;"> Subscriber &nbsp;</span></label>');
        else if({{editpermission.f_Permission}} == 1)
            document.write('<label for="">Phân Hệ: <span style="color: red;  font-weight: bold;"> Administrator &nbsp;</span></label>');
        else if({{editpermission.f_Permission}} == 2)
            document.write('<label for="">Phân Hệ: <span style="color: red;  font-weight: bold;"> Writer &nbsp;</span></label>');
        else
            document.write('<label for="">Phân Hệ: <span style="color: red;  font-weight: bold;"> Editor &nbsp;</span></label>');
    </script>
        <label for="">Thay Đổi:&nbsp;&nbsp;</label>
       <select name="f_Permission" style="width: 150px; height:35px;">
            <option value="0">0 - Subscriber</option>
             <option value="1">1  - Administator</option>
              <option value="2">2 - Writer</option>
              <option value="3">3 - Editor</option>
        </select>
    </div>

     <div class="form-group d-flex">
            <div>
              <a class="btn btn-lg btn btn-success btn-block" href="/account/users" role="button">
                 <i class="fa fa-backward"></i>
                Back
              </a>
            </div>
    {{/if}}  
        <div class="flex-fill ml-1">
            <button class="btn btn-info btn-lg btn-block" type="submit">
            <i class="fa fa-sign-in" aria-hidden="true"></i>
            Save
            </button>
        </div>
    </div>
    </div>
  </form>
<!--Form with header-->
    </div>
	</div>
</div>

