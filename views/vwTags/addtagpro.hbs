<div class="container">
	<div class="row justify-content-center" style="margin-top:50px;">
		<div class="col-12 col-md-8 col-lg-6 pb-5">
    <!--Form with header-->
     <form action="" method="POST">
        <div class="card border-primary rounded-0">
            <div class="card-header p-0">
              <div class="bg-info text-white text-center py-2">
                  <h3><i class="fas fa fa-plus-square"></i>  Gán Tags bài viết </h3>
              </div>
            </div>
        <div class="card-body p-3">

      <!--Body-->
      <label for=""><strong>chọn bài viết</strong></label>
    <div class="form-group">
   {{#if isAuthenticatedWriter}}
     <script>
       var t = 1;
       var a = {{authWriter.f_ID}};
     </script>
     {{else}}
     <script>
       var t = 2;
     </script>
    {{/if}}

<select name="ProductID" style="width: 200px; height:35px;">
            {{#each lcProducts}}
            <script>
              if(t == 2) 
              document.write(`<option value="{{ProID}}">{{ProID}} - {{TitleName}}</option>`);                    
            </script>
            <script>
               if({{UserID}} == a && t == 1 && ({{status}} == -1 || {{status}} == 0))
              {
                 document.write(`<option value="{{ProID}}">{{ProID}} - {{TitleName}}</option>`);
              }   
            </script>
            {{/each}}
        </select>

    </div>
     <label for=""><strong> chọn Tags</strong></label>
    <div class="form-group">
      <div class="input-group mb-2">
       <select name="TagID" style="width: 200px; height:35px;">
           {{#each this.tagproduct}}
            {{#if_eq TypeTag 2}}
            <option value="{{TagID}}">{{TagName}}</option>
             {{/if_eq}}
            {{/each}}
        </select>
      </div>
    </div>

    <div class="text-right">
      <script>
        if(t == 2)
        document.write(`<a class="btn btn-outline-primary" href="/tags/index" role="button" title="back">
                       <i class="fa fa-backward" aria-hidden="true"></i>&nbsp;List</a>`)
      </script>
       <script>
        if(t == 1)
        document.write(`<a class="btn btn-outline-primary" href="/" role="button" title="back">
                       <i class="fa fa-backward" aria-hidden="true"></i>&nbsp;Back</a>`)
      </script>
   
    <button type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i>
      Add
     </button>
     </div>

    </div>
    </div>
  </form>
<!--Form with header-->
    </div>
	</div>
</div>