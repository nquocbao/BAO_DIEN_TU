{{#if isAuthenticated}}
<script>
var pv = {{authUser.f_ID}};
</script>
{{/if}}
<form method="POST">
<div class="card">
  <h2 class="card-header text-center">
    Danh sách bài viết cá nhân
  </h2>
 <table class="table table-hover">
  <thead>
    <tr class="text-center">
      <th scope="col">#</th>
      <th scope="col">Title Name</th>
      <th scope="col">Main Content</th>
      <th scope="col">Date Summitted</th>
      <th scope="col">Avatar</th>
      <th scope="col">Status</th>
      <th scope="col">Category</th>
      <th scope="col">Full Products</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.personal}}
       <tr>
           <th scope="row">{{ProID}}</th>
           <td>{{TitleName}}</td>
           <td>{{MainContent}}</td>
           <td>{{DateSummitted}}</td>
           <td class="text-center" >
              <img src="/imgs/{{Avatar}}" alt="" style="width: 90px;"> 
            </td>

            <script>
              if({{status}} == -1)
              document.write(` <td class="text-center">bị từ chối</td>`)
              if({{status}} == 0)
              document.write(` <td class="text-center">chưa được duyệt</td>`)
              if({{status}} == 1)
              document.write(` <td class="text-center">chờ xuất bản</td>`)
              if({{status}} == 2)
              document.write(` <td class="text-center">đã xuất bản</td>`)
            </script>        
           <td class="text-center">{{CatName}}</td>
           <td class="text-right">
              <a class="btn btn-warning btn-sm " href="/products/full/{{ProID}}/sp" role="button" title="full content">
                 <i class="fa fa-battery-full"></i>
              </a>
           </td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
</form>